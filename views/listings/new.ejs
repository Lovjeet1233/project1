<% layout('/layouts/boilerplate') -%>
<body>
    <div class="container my-5">
        <h1 class="mb-4">Create a New Listing</h1>
        <form action="/listings" method="POST" >
            <div class="mb-3">
                <label for="title" class="form-label" >Title:</label>
                <input type="text" id="title" name="listing[title]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea id="description" name="listing[description]" class="form-control" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL:</label>
                <input type="text" id="image" name="listing[image]" class="form-control" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Create Listing</button>
        </form>
    </div>
</body>
